<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/bg_refreal"
       android:layout_marginHorizontal="@dimen/_15sdp"
       >
       <TextView
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Cristina Martin"
           android:textColor="#163300"
           android:layout_gravity="center"
           android:textSize="@dimen/_12ssp"
          />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_gravity="center"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Referrals Status:"
              android:textSize="@dimen/_10ssp"
              android:textColor="#87868D"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=" No Investment"
              android:textColor="#3C444B"
              android:layout_marginStart="@dimen/_3sdp"
              android:textSize="@dimen/_10ssp"
              />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_marginHorizontal="@dimen/_10sdp"
           >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_weight="1"
           >
           <ImageView
               android:layout_width="@dimen/_13sdp"
               android:layout_height="@dimen/_13sdp"
               android:src="@drawable/img_check"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Signed Up"
               android:textColor="#87868D"
               android:layout_marginStart="@dimen/_5sdp"
               android:textSize="@dimen/_9ssp"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_weight="1"
           android:layout_gravity="center"
           >
           <ImageView
               android:layout_width="@dimen/_13sdp"
               android:layout_height="@dimen/_13sdp"
               android:src="@drawable/img_check"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                   android:text="Profile Complete"
               android:textColor="#87868D"
               android:layout_marginStart="@dimen/_5sdp"
               android:textSize="@dimen/_9ssp"
               />
       </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <ImageView
                   android:layout_width="@dimen/_13sdp"
                   android:layout_height="@dimen/_13sdp"
                   android:src="@drawable/img_unchecked"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:text="Invested"
                   android:textColor="#87868D"
                   android:textSize="@dimen/_9ssp" />
           </LinearLayout>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginStart="@dimen/_5sdp"
               android:text="Invested"
               android:textColor="#87868D"
               android:textSize="@dimen/_9ssp" />
           <ImageView
               android:layout_width="@dimen/_13sdp"
               android:layout_height="@dimen/_13sdp"
               android:src="@drawable/img_unchecked"
               />
       </LinearLayout>
   </LinearLayout>


</RelativeLayout>